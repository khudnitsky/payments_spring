<jsp:root xmlns:jsp="http://java.sun.com/JSP/Page"
          xmlns="http://www.w3.org/1999/xhtml"
          xmlns:sf="http://www.springframework.org/tags/form"
          version="2.0" >
    <div class="content">
        <sf:form name="registrationForm"
                 action="/registration"
                 method="post"
                 modelAttribute="newUser"
                 onsubmit="validateForm()">
            <fieldset>
            <p align="center"><b>Введите ваши данные: </b></p>
            <br/>
                <table align="left" cellpadding="5" cellspacing="5">
                    <tr>
                        <td><label for="firstName">Имя:</label></td>
                        <td><sf:input path="firstName" cssClass="inputStyle" id="firstName"/></td>
                        <td>
                            <span id="emptyFirstName"></span>
                            <sf:errors path="firstName"/>
                        </td>
                    </tr>
                    <tr>
                        <td><label for="lastName">Фамилия:</label></td>
                        <td><sf:input path="lastName" cssClass="inputStyle" id="lastName"/></td>
                        <td>
                            <span id="emptyLastName"></span>
                            <sf:errors path="lastName"/>
                        </td>
                    </tr>
                    <tr>
                        <td><label for="login">Логин:</label></td>
                        <td><sf:input path="login" cssClass="inputStyle" id="login"/></td>
                        <td>
                            <span id="emptyLogin"></span>
                            <sf:errors path="login"/>
                        </td>
                    </tr>
                    <tr>
                        <td><label for="password_1">Пароль 1:</label></td>
                        <td><sf:password path="password_1" cssClass="inputStyle" id="password_1"/></td>
                        <td>
                            <span id="emptyPassword_1"></span>
                            <sf:errors path="password_1"/>
                        </td>
                    </tr>
                    <tr>
                        <td><label for="password_2">Пароль 2:</label></td>
                        <td><sf:password path="password_2" cssClass="inputStyle" id="password_2"/></td>
                        <td>
                            <span id="emptyPassword_2"></span>
                            <sf:errors path="password_2"/>
                        </td>
                    </tr>
                    <tr>
                        <td><label for="accountNumber">№ Счета:</label></td>
                        <td><sf:password path="accountNumber" cssClass="inputStyle" id="accountNumber"/></td>
                        <td>
                            <span id="emptyAccountId"></span>
                            <sf:errors path="accountNumber"/>
                        </td>
                    </tr>
                    <tr>
                        <td>Валюта Счета:</td>
                        <td>
                            <sf:radiobutton path="currency" value="BYR"/>BYR
                            <sf:radiobutton path="currency" value="USD"/>USD
                            <sf:radiobutton path="currency" value="EUR"/>EUR
                            <!--<input type="radio" name="currency" value="BYR" checked="checked"/>BYR-->
                            <!--<input type="radio" name="currency" value="USD"/>USD-->
                            <!--<input type="radio" name="currency" value="EUR"/>EUR-->
                            <br/>
                        </td>
                        <td>
                            <span id="emptyCurrency"></span>
                            <sf:errors path="currency"/>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2" align="center">
                            <span id="inputError"></span>
                            <label id="label">
                                ${operationMessage}
                                ${errorUserExists}
                            </label>
                        </td>
                    </tr>
                </table>
                <br/>
                <p align="center">
                    <input type="submit" value="Зарегистрировать" onClick="clearResult()"/>
                </p>
                <br/>
            </fieldset>
        </sf:form>
    </div>
</jsp:root>
